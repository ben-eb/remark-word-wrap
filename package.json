{
  "name": "remark-word-wrap",
  "version": "1.0.1",
  "description": "Wrap lines of Markdown to a specified width.",
  "main": "dist/index.js",
  "files": [
    "LICENSE-MIT",
    "dist"
  ],
  "scripts": {
    "pretest": "eslint src",
    "markdown": "remark *.md --quiet",
    "prepublish": "del-cli dist && BABEL_ENV=publish babel src --out-dir dist --ignore /__tests__/",
    "test": "npm run markdown && nyc --reporter=text ava src/__tests__"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-0": "^6.3.13",
    "coveralls": "^2.11.6",
    "del-cli": "^0.2.0",
    "eslint": "^1.10.3",
    "nyc": "^5.3.0",
    "remark": "^3.1.3",
    "remark-heading-gap": "^1.0.0",
    "remark-usage": "^2.1.0"
  },
  "dependencies": {
    "unist-util-is": "^1.0.0",
    "unist-util-parents": "^0.1.2",
    "unist-util-visit": "^1.0.0"
  },
  "keywords": [
    "word",
    "wrap",
    "line",
    "length",
    "remark",
    "markdown"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ben-eb/remark-word-wrap",
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "repository": "ben-eb/remark-word-wrap",
  "remarkConfig": {
    "output": true,
    "plugins": {
      "heading-gap": {},
      "usage": {
        "heading": "example"
      }
    },
    "settings": {
      "bullet": "*",
      "fences": true,
      "listItemIndent": "1"
    }
  },
  "ava": {
    "require": "babel-core/register"
  }
}
